# =============================================================================
# MEDFLOW FORKS - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values
#
# Generate secrets with:
#   python -c "import secrets; print(secrets.token_urlsafe(32))"
# =============================================================================

# -----------------------------------------------------------------------------
# APPLICATION
# -----------------------------------------------------------------------------
APP_ENV=production           # development | production
DEBUG=false                  # Enable debug mode (never in production)

# -----------------------------------------------------------------------------
# DATABASE (Required)
# -----------------------------------------------------------------------------
POSTGRES_USER=medflow
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=medflow
DATABASE_URL=postgresql+asyncpg://medflow:your_secure_password_here@postgres:5432/medflow

# -----------------------------------------------------------------------------
# REDIS
# -----------------------------------------------------------------------------
REDIS_URL=redis://redis:6379

# -----------------------------------------------------------------------------
# SECURITY (Required in production)
# -----------------------------------------------------------------------------
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=your_jwt_secret_at_least_32_chars
WEBHOOK_SECRET=your_webhook_secret_at_least_32_chars

# -----------------------------------------------------------------------------
# LLM CONFIGURATION (At least one API key required for agents)
# -----------------------------------------------------------------------------
LLM_PROVIDER=anthropic       # anthropic | openai | google | xai

# Model IDs (defaults shown - change to use different models)
MODEL_SMART=claude-sonnet-4-5-20250514
MODEL_FAST=claude-haiku-4-20250514

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-...

# OpenAI (GPT)
# OPENAI_API_KEY=sk-...

# Google (Gemini)
# GOOGLE_API_KEY=AIza...

# xAI (Grok)
# XAI_API_KEY=xai-...

# -----------------------------------------------------------------------------
# TWENTY CRM (Required)
# -----------------------------------------------------------------------------
TWENTY_API_URL=https://crm.trafegoparaconsultorios.com.br
TWENTY_API_KEY=your_twenty_api_key

# -----------------------------------------------------------------------------
# CAL.COM SCHEDULING (Required)
# -----------------------------------------------------------------------------
CALCOM_API_URL=https://agenda.trafegoparaconsultorios.com.br
CALCOM_API_KEY=cal_...
CALCOM_EVENT_TYPE_ID_DEFAULT=1

# -----------------------------------------------------------------------------
# CHATWOOT MESSAGING (Required)
# -----------------------------------------------------------------------------
CHATWOOT_API_URL=https://inbox.trafegoparaconsultorios.com.br
CHATWOOT_API_KEY=your_chatwoot_api_key
CHATWOOT_ACCOUNT_ID=1
CHATWOOT_INBOX_ID=1
CHATWOOT_HUMAN_TEAM_ID=1

# -----------------------------------------------------------------------------
# WHATSAPP (Evolution API)
# -----------------------------------------------------------------------------
# EVOLUTION_API_URL=https://your-evolution-api.com
# EVOLUTION_API_KEY=your_evolution_key
EVOLUTION_INSTANCE_AGENCIA=agencia   # WhatsApp instance name for agency routing

# -----------------------------------------------------------------------------
# IMAGE GENERATION (Optional)
# -----------------------------------------------------------------------------
# REPLICATE_API_KEY=r8_...
# NANOBANANA_API_KEY=...

# -----------------------------------------------------------------------------
# SOCIAL MEDIA (Optional)
# -----------------------------------------------------------------------------
# META_ACCESS_TOKEN=...

# -----------------------------------------------------------------------------
# SCRAPING (Optional)
# -----------------------------------------------------------------------------
# APIFY_TOKEN=apify_api_...

# -----------------------------------------------------------------------------
# CORS
# -----------------------------------------------------------------------------
CORS_ORIGINS_RAW=http://localhost:3000,http://localhost:3001

# -----------------------------------------------------------------------------
# FRONTEND (Next.js public vars)
# -----------------------------------------------------------------------------
# NEXT_PUBLIC_API_URL=http://localhost:8000
# NEXT_PUBLIC_TWENTY_URL=https://crm.your-domain.com
# NEXT_PUBLIC_CALCOM_URL=https://agenda.your-domain.com
# NEXT_PUBLIC_CHATWOOT_URL=https://chat.your-domain.com
