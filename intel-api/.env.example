# Database
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/viral_finder

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Scraping limits
MAX_POSTS_PER_SCRAPE=100
MAX_REELS_PER_SCRAPE=50
SCRAPE_TIMEOUT_SECONDS=600

# Browser pool (Playwright instances)
BROWSER_POOL_SIZE=3
BROWSER_RESTART_AFTER=50

# Rate limiting (delays between requests)
RATE_LIMIT_MIN_DELAY=2.0
RATE_LIMIT_MAX_DELAY=5.0
RATE_LIMIT_MAX_BACKOFF=300.0
